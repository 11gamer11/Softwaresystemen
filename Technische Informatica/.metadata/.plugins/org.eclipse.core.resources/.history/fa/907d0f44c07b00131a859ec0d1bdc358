package ss.week5;

public class RecPerfectStrategy implements Strategy{
	
	public String strategyName = "Perfect";

	private final int WINNING = 10;
	private final int NOTLOSING = 1;
	private final int NEUTRAL = 0;
	private int qual;
	
	public String getName() {
		return this.strategyName;
	}

	@Override
	public int determineMove(Board b, Mark m) {
		for(int i = 0; i < 9; i++){
			if(b.isEmptyField(i)){
				Board tb = b.deepCopy();
				tb.setField(i, m);
				determineMoveWeight(tb, m, i);
				determineMove(tb, m.other());
			}
		}
		return 0;
	}


	private int determineMoveWeight(Board b, Mark m, int field) {
		if(b.hasWinner() && b.isWinner(m)){
			qual += WINNING;
		}else{
			b.setField(field, m.other());
			if(b.hasWinner() && b.isWinner(m.other())){
				qual += NOTLOSING;
			}
			else{
				qual += NEUTRAL;
			}
		}
		return qual;
	}
	
	
}
