package ss.week6.vote;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

import ss.week6.ListenerDemo;

public class VoteFrame extends JFrame implements ActionListener{

	 private JButton vote1, vote2, vote3, vote4, vote5;
	 private JLabel choice, voted;
	
	public VoteFrame() {
	    super("Vote");
	    init();
	}
	
	private void init() {
	    Container c = getContentPane();
	    c.setLayout(new FlowLayout());
	    choice = new JLabel("Choose a party\n");
	    voted = new JLabel("");
	    vote1 = new JButton("ONE");
	    vote2 = new JButton("TWO");
	    vote3 = new JButton("THREE");
	    vote4 = new JButton("FOUR");
	    vote5 = new JButton("FIVE");
	    vote1.addActionListener(this); // object listens to 
	    vote2.addActionListener(this); // object listens to 
	    vote3.addActionListener(this); // object listens to 
	    vote4.addActionListener(this); // object listens to 
	    vote5.addActionListener(this); // object listens to 
	    c.add(choice);
	    c.add(new JSeparator(SwingConstants.VERTICAL));
	    c.add(vote1); c.add(vote2); c.add(vote3); c.add(vote4); c.add(vote5); // add buttons
	    c.add(voted);
	    setSize(300,200); setVisible(true);
	}

	public void actionPerformed(ActionEvent ev) {
		  if (ev.getSource() == vote1) {
		    voted.setText("1");
		  }else if (ev.getSource() == vote2) {
			  voted.setText("2");
		  }else if (ev.getSource() == vote3) {
			  voted.setText("3");
		  }else if (ev.getSource() == vote4) {
			  voted.setText("4");
		  }else if (ev.getSource() == vote5) {
			  voted.setText("5");
		  }
		}

    public static void main (String [] args) {
    	new VoteFrame();
    }
	
}
